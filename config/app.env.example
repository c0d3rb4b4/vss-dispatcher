# vss-dispatcher configuration
# Only tuneable settings - internal constants are in the application

# RabbitMQ Settings
RABBITMQ_HOST=192.168.68.83
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=mediawall
RABBITMQ_PASSWORD=your_password_here
RABBITMQ_VHOST=/mediawall
RABBITMQ_NORMAL_QUEUE=vss.normal
RABBITMQ_PRIORITY_QUEUE=vss.priority
RABBITMQ_PREFETCH_COUNT=1

# VSS Service Settings
# Base URL of the VSS instance (scheme + host + port)
VSS_BASE_URL=http://192.168.68.79:8081

# VSS API credentials (from VSS admin Settings â†’ Users / API Keys)
VSS_API_KEY=your_api_key_here
VSS_API_SECRET=your_api_secret_here

# Device UUIDs to send images to (comma-separated for multiple devices)
VSS_DEVICE_UUIDS=device-uuid-1,device-uuid-2

# VSS connection settings
VSS_TIMEOUT=30
VSS_RETRY_COUNT=3
VSS_RETRY_DELAY=1.0

# Mount Paths (inside container)
SAMBA_MOUNT_PATH=/mnt/mediawall

# Application Settings
LOG_LEVEL=INFO
CHECK_INTERVAL=0.1